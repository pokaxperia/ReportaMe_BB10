<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	xmlns:rim="http://www.blackberry.com/ns/widgets"
	id="ReportaMe"
	version="1.0.2.1">
	<author href="https://welod.com">Welod</author>
	<description>Usa tu ubicacion para compartirla o para adjuntarla a la situación que lo necesite</description>
	<description xml:lang="en_US">Use your location to share or to attach to the situation you need</description>
	<name>ReportaMe</name>
	<name xml:lang="en_US">Report</name>
	<access uri="*" />
	<icon src="assets/icons/icon-720.png"/>
	<icon src="assets/icons/icon-1280.png"/>
	<rim:splash src="assets/splash-720x720.png" />
	<rim:splash src="assets/splash-768x1280.png" />
	<content src="local:///index.html" />
	<feature id="ReportaMe">
		<param name="orientation" value="portrait" />
	</feature>
	<feature id="blackberry.invoke" required="true" version="1.0.0.0"/>
	<feature id="blackberry.app"/>
	<feature id="blackberry.app.event"/>
	<feature id="blackberry.bbm.platform" />
	<feature id="blackberry.invoke.card" />
	<feature id="blackberry.system.event" />
	<feature id="blackberry.ui.cover" />
	<feature id="blackberry.ui.toast" />
	<feature id="blackberry.system" required="true" version="1.0.0.0"/>
	<rim:permissions>
		<rim:permit>access_location_services</rim:permit>
		<rim:permit>bbm_connect</rim:permit>
	</rim:permissions>
</widget>